{
    "name": "typo3-console/composer-typo3-auto-install",
    "type": "library",
    "description" : "Setup TYPO3 on 'composer install'",
    "license": "GPL-2.0-or-later",
    "require": {
        "php": "^7 | ^8",
        "helhum/typo3-console": "^6.0 || ^7.0",
        "typo3/cms-composer-installers": "^2.0 || ^3.0 || ^4.0"
    },
    "conflict": {
        "typo3-console/composer-auto-commands": "< 0.3.0"
    },
    "suggest": {
        "helhum/dotenv-connector": "To be able to easily expose env vars from a .env file"
    },
    "autoload": {
        "psr-4": {
            "Typo3Console\\Typo3AutoInstall\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        }
    }
}
